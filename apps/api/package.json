{
  "name": "@artisan/api",
  "version": "1.0.0",
  "description": "Artisan API server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@artisan/shared": "*",
    "@prisma/client": "^7.2.0",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "prisma": "^7.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.9",
    "dotenv": "^17.2.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
